<div class="container">
  <div>
    <h2>Companies</h2>

    <% if @companies.exists? %>
      <%= link_to 'New Company', new_company_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @companies.exists? %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Pin</th>
                          <th>Tel</th>
                          <th>Address</th>
            
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
        <% @companies.each do |company| %>
          <tr>
                          <td><%= company.name %></td>
                          <td><%= company.email %></td>
                          <td><%= company.pin %></td>
                          <td><%= company.tel %></td>
                          <td><%= company.address %></td>
            
            <td>
              <%= link_to "Edit", edit_company_path(company), class: 'btn btn-info btn-sm m-2' %>
              <%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  <% else %>
    <div class="bg-white rounded shadow flex items-center justify-between p-8">
      <div class="flex-1 text-center">
        <p class="text-xl font-semibold mb-4">Create your first Company</p>
      <%= link_to 'New Company', new_company_path, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>